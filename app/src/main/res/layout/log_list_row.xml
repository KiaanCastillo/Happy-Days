<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/square_btn"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/log_overall_mood_display"
        style="@style/activity_square_display"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/logs_fave_1"
        style="@style/logs_activity_display" />

    <ImageView
        android:id="@+id/logs_fave_2"
        style="@style/logs_activity_display" />

    <ImageView
        android:id="@+id/logs_fave_3"
        style="@style/logs_activity_display" />

    <TextView
        android:id="@+id/log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textAppearance="@style/heading1" />

</LinearLayout>