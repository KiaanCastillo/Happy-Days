<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/square_btn"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/fave_1"
        style="@style/activity_square_display"
        app:srcCompat="@drawable/ic_running" />

    <ImageView
        android:id="@+id/fave_2"
        style="@style/activity_square_display"
        app:srcCompat="@drawable/ic_running" />

    <ImageView
        android:id="@+id/fave_3"
        style="@style/activity_square_display"
        app:srcCompat="@drawable/ic_running" />

    <TextView
        android:id="@+id/fave_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourite Label"
        android:textAppearance="@style/heading1" />


</LinearLayout>