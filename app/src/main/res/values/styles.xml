<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="FragmentTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FragmentSubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
